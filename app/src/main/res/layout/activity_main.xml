<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/toLogPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="toLog"
        android:text="log page" />

    <Button
        android:id="@+id/toBudgetPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="toBudget"
        android:text="Budget Page" />

    <Button
        android:id="@+id/toHistPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="toHistory"
        android:text="History Page" />


</LinearLayout>